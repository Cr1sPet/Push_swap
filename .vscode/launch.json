    "version": "0.2.0",
    "configurations": [
	
		{
			"name": "(lldb) Запустить",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/push_swap",
			"args": ["121 246 89   4 284 381  11 166 55  7 133  103 198 3403"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [ { "name": "squid", "value": "clam" } ],
			"externalConsole": true,
			"MIMode": "lldb"
		},
		{
			"name": "(lldb) Подключить",
			"type": "lldb",
			"request": "attach",
			"program": "${workspaceFolder}/push_swap",
			"processId": "${command:pickProcess}",
			"MIMode": "lldb"
		}
    ]
}